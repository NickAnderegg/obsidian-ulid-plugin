# editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 4

[*.{yaml,yml,json}]
indent_size = 2

[*.{scss}]
indent_size = 4

[CNAME]
insert_final_newline = false
